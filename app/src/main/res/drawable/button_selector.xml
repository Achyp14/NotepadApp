<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape>
            <solid
                android:color="#ffffff" />
            <stroke
                android:width="1dp"
                android:color="#ffffff" />
        </shape>
    </item>
    <items>
        <shape>
            <solid
                android:color="#CCCCCC" />
            <stroke
                android:width="1dp"
                android:color="#ffffff" />
        </shape>
    </items>
</selector>