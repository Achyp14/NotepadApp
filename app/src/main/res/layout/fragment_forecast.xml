<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/forecast_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="10dp"
    android:layout_marginTop="10dp"
    android:background="@color/colorPlatinum"
    android:orientation="horizontal"
    android:weightSum="1"
    tools:context="com.example.achypur.notepadapp.ForecastFragment">

    <ImageView
        android:id="@+id/forecast_icon"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:scaleType="fitXY"
        android:src="@drawable/default_weather_icon" />

    <View
        android:layout_width="@dimen/note_button_divider_width"
        android:layout_height="match_parent"
        android:layout_marginBottom="@dimen/note_button_divider_margin_bottom"
        android:layout_marginTop="@dimen/note_button_divider_margin_top"
        android:background="@color/colorTag" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_weight="1"
        android:orientation="vertical"
        android:weightSum="1.1">

        <TextView
            android:id="@+id/forecast_description"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="0.7"
            android:text="Description"
            android:textSize="26sp" />

        <TextView
            android:id="@+id/forecast_city"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_marginBottom="@dimen/note_button_divider_margin_bottom"
            android:layout_weight="0.4"
            android:text="City"
            android:textSize="14sp" />
    </LinearLayout>

    <View
        android:layout_width="@dimen/note_button_divider_width"
        android:layout_height="match_parent"
        android:layout_marginBottom="@dimen/note_button_divider_margin_bottom"
        android:layout_marginTop="@dimen/note_button_divider_margin_top"
        android:background="@color/colorTag" />


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_marginLeft="10dp"
        android:gravity="end"
        android:orientation="vertical"
        android:weightSum="1.1">

        <TextView
            android:id="@+id/forecast_temp"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_gravity="end"
            android:layout_weight="0.7"
            android:text="20"
            android:textSize="26sp" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_marginBottom="@dimen/note_button_divider_margin_bottom"
            android:layout_weight="0.4">

            <TextView
                android:id="@+id/forecast_wind"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:text="Wind"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/forecast_rain"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Rain"
                android:textSize="14sp" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>
