<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:id="@+id/relative1"
    android:layout_height="match_parent"
    android:background="#A7FFEB"
    tools:context=".UI.LoginActivity">

    <LinearLayout
        android:layout_above="@+id/hide_view"
        android:layout_centerVertical="true"
        android:id="@+id/linear_layout1"
        android:layout_margin="@dimen/login_linear_layout_margin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <EditText
            android:id="@+id/login_login"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:hint="@string/login"
            android:textCursorDrawable="@color/colorLoginText"
            android:backgroundTint="@color/colorLoginText"
            android:textColor="@color/colorLoginText"
            android:inputType="textNoSuggestions"
            android:singleLine="true" />

        <EditText
            android:id="@+id/login_password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:hint="@string/password"
            android:textColor="@color/colorLoginText"
            android:textCursorDrawable="@color/colorLoginText"
            android:backgroundTint="@color/colorLoginText"
            android:inputType="textPassword|textNoSuggestions"
            android:singleLine="true" />
    </LinearLayout>


    <View
        android:visibility="invisible"
        android:id="@+id/hide_view"
        android:layout_width="match_parent"
        android:layout_height="@dimen/login_invisible_view_height"
        android:layout_centerVertical="true"/>
    <Button
        android:layout_below="@+id/linear_layout1"
        android:id="@+id/login_button"
        android:layout_width="wrap_content"
        android:text="@string/login"
        android:background="@android:color/holo_blue_dark"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"/>

    <TextView
        android:layout_margin="10dp"
        android:text="@string/sign_up"
        android:layout_alignParentBottom="true"
        android:id="@+id/login_sign_up"
        android:textColor="@color/colorLoginText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/colorLoginText"
        android:layout_centerInParent="true"/>

</RelativeLayout>




